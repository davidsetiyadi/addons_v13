        <record id="view_gbr_res_partner_filter" model="ir.ui.view">
            <field name="name">res.partner.select</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <search string="Search Partner">
                	<field name="id" string="ID"/>
                	<field name="is_semua_data"/>
                    <field name="name"
                        filter_domain="['|', '|', ('display_name', 'ilike', self), ('ref', '=', self), ('email', 'ilike', self)]" string="Nama"/>
                    <field name="state_id" string="Daerah"
                       filter_domain="[
                        '|','|','|',
                        ('state_id.name', 'ilike', self),('kecamatan_id.name', 'ilike', self), ('kota_id.name', 'ilike', self),('kelurahan_id.name', 'ilike', self)]"/>
                    <field name="group_id" string="Kelompok" filter_domain="['|',('group_id.name','ilike',self),('group2_id.name','ilike',self)]"/>
                     <field name="group3_id" string="Grouping" filter_domain="['|','|',('group3_id.name','ilike',self),('group4_id.name','ilike',self),('group5_id.name','ilike',self)]"/>
                    <field name="contact_person1" string="Hubungi" filter_domain="['|', '|', '|' ,'|' ,'|' ,('contact_person1', 'ilike', self), ('contact_person2', '=', self), ('contact_person3', 'ilike', self), ('contact_number1', 'ilike', self), ('contact_number2', 'ilike', self), ('contact_number3', 'ilike', self)]"/>
                    <field name="comment" string="Catatan"/>
                    <!-- <field name="parent_id" domain="[('is_company', '=', True)]" operator="child_of"/>
                    <field name="email" filter_domain="[('email', 'ilike', self)]"/>
                    <field name="phone" filter_domain="['|', ('phone', 'ilike', self), ('mobile', '=', self)]"/>
                    <field name="user_id"/>-->
                    <!-- <field name="sales_employee_id" string="Sales"/>  -->
                    <separator/>
                    <filter string="Individuals" name="type_person" domain="[('is_company', '=', False)]"/>
                    <filter string="Companies" name="type_company" domain="[('is_company', '=', True)]"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <group expand="0" name="group_by" string="Group By">
                        <filter name="salesperson" string="Salesperson" domain="[]" context="{'group_by' : 'user_id'}" />
                        <filter name="group_company" string="Company" context="{'group_by': 'parent_id'}"/>
                        <filter name="group_country" string="Country" context="{'group_by': 'country_id'}"/>
                    </group>
                </search>
            </field>
        </record>

    <record id="view_gbr_pencairan" model="ir.ui.view">
        <field name="name">gbr.pencairan.form</field>
        <field name="model">gbr.pencairan</field>
        <field name="arch" type="xml">
            <form string="GBR Pencairan">
                
                <group col="4">
                     <group colspan="4">
                        <label for="date" string="Tanggal"/>
                        <div for="journal_id" class="o_row" >
                            <field name="date" string="Tanggal" style="padding-right:10px"/>                                    
                            <field name="tanggal_char" string="Tanggal" style="background:greenyellow;"/>
                        </div>                                 
                    
                        <label for="journal_id" string="Cair ke"/>
                        <div for="journal_id" class="o_row" >
                            <field name="journal_id" string="Cair ke" style="padding-right:10px" domain="[('type', 'in', ('bank','cash'))]"/>
                            <field name="source_acc_id" readonly="1"/>
                        </div>       
                     </group>
                     <group colspan="4">
                        <field name="reason" string="Catatan"/>
                     </group>
                </group>
                <footer>
                    <button string='Cairkan' name="reverse_moves" type="object" class="btn-primary"/>
                    <button string="Tutup" class="btn-secondary" special="cancel"/>
                </footer>
           </form>
        </field>
    </record>

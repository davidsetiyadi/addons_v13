        <field name="name">gbr.pencairan.cek.form</field>
        <field name="model">gbr.pencairan.cek</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <form string="Grouping"  create="true">               
                <sheet>                    
                    
                    <notebook>                        
                        <page id="other_tab" string="Yang Belum Cair" name="other_info">
                        	<group col="4">
		                        <group colspan="2">
		                        <label for="date_start" string="Tanggal"/>
		                        <div>
		                            <field name="date_start" class="oe_inline" style="padding-right:10px;" required="1"/>
		                            <field name="date_end" class="oe_inline" required="1"/>
		                        </div>    
		                   		</group>   
		                   		 <group colspan="2">
		                   		 	<field name="cari_1" class="oe_inline"/>
		                   		 	<button type="object" name="button_search" class="oe_highlight" string="Cari"/>
		                   		 </group>              		
		                    </group>
                            <field name="pencairan_ids" >
                                <tree editable="bottom" create="false">     
                                	<field name="is_selected" optional="show" invisible="1"/>  
                                    <field name="id" string="ID" optional="hide" invisible="1"/>
                                    <field name="db_cr" optional="show"/>
                                    <field name="name" optional="show"/>
                                    <field name="date" optional="show"/>
                                    <field name="amount" optional="show"/>
                                    <field name="currency_id" optional="show"/>
                                    <field name="perkiraan" optional="show"/>
                                    <field name="amount" optional="show"/>
                                    <field name="tgl_cair" optional="show"/>
                                    <field name="partner2_id" optional="show"/>
                                    <field name="date" optional="show"/>
                                    <field name="partner_id" optional="show"/>
                                    <field name="information" optional="show"/>
                                    <button type="object" name="button_reconcile" class="oe_highlight" string="Cairkan"/>
                                </tree>                                
                            </field>                                             
                        </page>
                        <page id="other_tab_2" string="Yang Sudah Cair" name="other_info_2">
                            <group col="4">
                                <group colspan="2">
                                <label for="date_start" string="Tanggal"/>
                                <div>
                                    <field name="date_start2" class="oe_inline" style="padding-right:10px;" required="1"/>
                                    <field name="date_end2" class="oe_inline" required="1"/>
                                </div>    
                                </group>   
                                 <group colspan="2">
                                    <field name="cari_1" class="oe_inline"/>
                                    <button type="object" name="button_search" class="oe_highlight" string="Cari"/>
                                 </group>                   
                            </group>
                            <field name="pencairan_lns_id" >
                                <tree editable="bottom" create="false">     
                                    <field name="is_selected" optional="show" invisible="1"/>  
                                    <field name="id" string="ID" optional="hide" invisible="1"/>
                                    <field name="db_cr" optional="show"/>
                                    <field name="name" optional="show"/>
                                    <field name="date" optional="show"/>
                                    <field name="amount" optional="show"/>
                                    <field name="currency_id" optional="show"/>
                                    <field name="perkiraan" optional="show"/>
                                    <field name="amount" optional="show"/>
                                    <field name="tgl_cair" optional="show"/>
                                    <field name="partner2_id" optional="show"/>
                                    <field name="date" optional="show"/>
                                    <field name="partner_id" optional="show"/>
                                    <field name="information" optional="show"/>
                                    <field name="full_reconcile_id" invisible="1"/>
                                    <field name="move_line_id" invisible="1"/>
                                    <button type="object" name="button_cancel" class="oe_highlight" string="Batalkan"/>
                                </tree>                                       
                            </field>                                             
                        </page>
                        
                    </notebook>
                </sheet>              
                              
                <footer>
                    <button class="btn-secondary" special="cancel" string="Tutup" style="justify-content: center; width: 100% !important;, background-color:#1F487E !important"/>
                </footer>
            </form>
        </field>
    </record>

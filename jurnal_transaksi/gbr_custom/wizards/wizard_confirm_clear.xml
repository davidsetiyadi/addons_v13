<?xml version="1.0" encoding="utf-8"?>
<odoo>   
<data>
	<record id="view_gbr_confirm_clear" model="ir.ui.view">
        <field name="name">gbr.confirm.clear.form</field>
        <field name="model">gbr.confirm.clear</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <form string="Konfirmasi Penjualan"  create="true">  
            	<h4>Apakah Anda yakin untuk mengganti status penjualan menjadi clear?</h4>
	            <footer>
                        <button type="object"
                        class="oe_highlight"
                        id="button_action_clear_id"                        
                        name="button_action_clear"
                        string="Iya"
                        context="{}">
                    </button>
                        or
                        <button string="Tidak" class="oe_highlight" special="cancel"/>
                	</footer>
            </form>
        </field>
    </record>
</data>
</odoo>
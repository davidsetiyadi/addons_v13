<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_form" model="ir.ui.view">
        <field name="name">res.config.settings.quick.search.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="100"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="GBR UI" string="GBR UI" data-key="gbr_ui_custom">
                    <h2>GBR UI</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-12 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="top_menu_ids"/>
                                <div class="text-muted mb16">
                                    Configure your menu to show up in top of the layout
                                </div>
                                <field name="top_menu_ids">
                                    <tree>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </div>
                        </div>

                        <div class="col-xs-12 col-md-12 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div class="o_form_label">Detail Popups</div>
                                <div class="text-muted">
                                    Setup popup detail for selected models
                                </div>
                                <div class="content-group">
                                    <div class="mt8">
                                        <button name="%(gbr_ui_custom.action_gbr_detail_popup)d" icon="fa-arrow-right" type="action" string="Setup Popups Detail" class="btn-link"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_gbr_detail_popup_tree" model="ir.ui.view">
        <field name="name">gbr.detail.popup.tree</field>
        <field name="model">gbr.detail.popup</field>
        <field name="arch" type="xml">
            <tree string="Detail Popups">
                <field name="name"/>
                <field name="title"/>
                <field name="src_model" invisible="1"/>
                <field name="popup_model" invisible="1"/>
                <field name="src_model_id"/>
                <field name="popup_model_id"/>
                <field name="view_id"/>
                <field name="related_field"/>
            </tree>
        </field>
    </record>

    <record id="view_gbr_detail_popup_form" model="ir.ui.view">
        <field name="name">gbr.detail.popup.form</field>
        <field name="model">gbr.detail.popup</field>
        <field name="arch" type="xml">
            <form string="Detail Popups">
                <sheet>
                    <field name="src_model" invisible="1"/>
                    <field name="popup_model" invisible="1"/>
                    <group col="4">
                        <field name="name" required="1"/>
                        <field name="title" required="1"/>
                        <field name="src_model_id" required="1"/>
                        <field name="popup_model_id" required="1"/>
                        <field name="view_id" domain="[('type', '=', 'tree'), ('model', '=', popup_model), ('inherit_id', '=', False)]" required="1"/>
                        <field name="related_field" required="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_gbr_detail_popup" model="ir.actions.act_window">
        <field name="name">Detail Popups</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">gbr.detail.popup</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create popup detail when click a record.
            </p>
        </field>
    </record>
</odoo>
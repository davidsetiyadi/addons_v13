    <record id="view_form_divisi_inherit_gbr" model="ir.ui.view">
    	<field name="name">gbr.divisi.form.inherit</field>
    	<field name="model">hr.department</field>
    	<field name="inherit_id" ref="hr.view_department_form"/>
    	<field name="arch" type="xml">    		
    		
    			<field name="name" position="replace">
    				<field name="name" string="Divisi"/>
    			</field>
    	
	    		<field name="name" position="after">
	    			<field name="price"/>
	    		</field>
	    		<!-- <field name="price" position="after">
	    			<field name="price2"/>
	    		</field> --> 	
    		
    		<field name="parent_id" position="replace">
    			<field name="parent_id" invisible="1"/>
    		</field>
    		<field name="manager_id" position="replace">
    			<field name="manager_id" invisible="1"/>
    		</field>
	    		
	    	
    	</field>
    </record>

     <record id="view_tree_divisi_inherit_gbr" model="ir.ui.view">
    	<field name="name">gbr.divisi.tree.inherit</field>
    	<field name="model">hr.department</field>
    	<field name="inherit_id" ref="hr.view_department_tree"/>
    	<field name="arch" type="xml"> 
    		<field name="parent_id" position="replace">
    			<field name="parent_id" invisible="1"/>
    		</field>
    		<field name="manager_id" position="replace">
    			<field name="manager_id" invisible="1"/>
    		</field>
    		<field name="display_name" position="replace">
    			<field name="display_name" string="Divisi"/>
    		</field>
    		<field name="display_name" position="after">
    			<field name="price" string="H.Jual"/>
    		</field>
    		<field name="price" position="after">
    			<field name="price2" string="Kel.HJL"/>
    		</field>
    		<field name="price2" position="after">
    			<field name="id"/>
    		</field>
    		<field name="id" position="after">
    			<field name="write_uid" string="Entry-by"/>
    		</field>
    		<field name="write_uid" position="after">
    			<field name="create_date" string="Entry-Date"/>
    		</field>
    		<field name="create_date" position="after">
    			<field name="write_date" string="Last-Edit Date"/>
    		</field>
    	</field>
    </record>    


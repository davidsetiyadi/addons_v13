<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_gbr_currency_rate_tree" model="ir.ui.view">
        <field name="name">res.currency.rate.tree</field>
        <field name="model">res.currency.rate</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <tree string="Currency Rates" editable="bottom">
                <field name="name"/>
                
                <field name="rate" digits="[12,12]" invisible="1"/>
                <field name="buying_rate"/>
                <field name="sale_rate"/>
                <field name="sale_rate_2"/>
                <field name="sale_rate_3"/>
                <field name="sale_rate_4"/>
                <field name="sale_rate_5"/>
                <field name="tax_rate" optional="show"/>
                <field name="ledger_rate" optional="show"/>
                <field name="create_uid" string="Entry-By" optional="hide"/>
                <field name="create_date" string="Entry-date" optional="hide"/>
                <field name="write_uid" string="Last-Edit By" optional="hide"/>
                <field name="write_date" string="Last-Edit Date" optional="hide"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
            </tree>
        </field>
    </record>

    <act_window
           id="act_view_currency_rates"
           name="Kurs"
           view_mode='tree,form'
           view_id='gbr_custom.view_gbr_currency_rate_tree'
           domain="[('currency_id','=', active_id)]"
           context="{'default_currency_id': active_id}"
           res_model="res.currency.rate"/>
    <record id="view_gbr_currency_form" model="ir.ui.view">
        <field name="name">res.currency.form</field>
        <field name="model">res.currency</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <form string="Currency">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" string="Kurs" type="action" name="%(act_view_currency_rates)d"
                            icon="fa-money" widget="statinfo" attrs="{'invisible': [('active', '=', False)]}"/>
                    </div>
                    <group>
                        <group>
                            <field name="name" string="Kode"/>
                            <field name="company_id" invisible="1"/>
                            <field name="rate" digits="[12,12]" invisible="1"/>
                            <field name="mata_uang"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="currency_unit_label" string="Terbilang (MU)"/>                            
                            <field name="currency_subunit_label" string="Terbilang (Sen)"/>
                        </group>
                    </group>
                    <group groups="base.group_no_one">
                        <group string="Price Accuracy">
                            <field name="rounding"/>
                            <field name="decimal_places"/>
                        </group>
                        <group string="Display">
                            <field name="symbol"/>
                            <field name="position"/>
                        </group>
                    </group>
                     <group>
                        <field name="auto_pay_km_id" domain="[('user_type_id.name','=','Bank and Cash')]"/>
                        <field name="auto_pay_kk_id" domain="[('user_type_id.name','=','Bank and Cash')]"/>
                        <field name='is_kurs_dasar' invisible="0"/>
                     </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_gbr_currency_tree" model="ir.ui.view">
        <field name="name">res.currency.tree</field>
        <field name="model">res.currency</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <tree string="Currencies" decoration-muted="(not active)">
                <field name="name" string="Kode" optional="show"/>
                <field name="currency_unit_label" string="Mata Uang" invisible="1"/>
                <field name="mata_uang" optional="show"/>
                <field name="decimal_places" string="Decimal" optional="show"/>
                <field name="auto_pay_km_id" domain="[('user_type_id.name','=','Bank and Cash')]" optional="show"/>
                <field name="auto_pay_kk_id" domain="[('user_type_id.name','=','Bank and Cash')]" optional="show"/>
                <field name="currency_unit_label" string="Terbilang (MU)"/>                            
                <field name="currency_subunit_label" string="Terbilang (Sen)"/>
                <field name="write_uid" string="Entry-By" optional="show"/>
                <field name="create_date" string="Entry-date" optional="show"/>
                <field name="write_uid" string="Last-Edit By" optional="show"/>
                <field name="write_date" string="Last-Edit Date" optional="show"/>
                <field name="symbol" invisible="1"/>
                <field name="rate_ids" invisible="1"/>
                <field name="date" optional="show"/>
                <field name="rate" digits="[12,6]" invisible="1"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

	<record id="view_gbr_country_form" model="ir.ui.view">
        <field name="name">res.country.form</field>
        <field name="model">res.country</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box">
                    </div>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <group name="main_group">
                        <group name="country_details">
                            <field name="name"/>
                            <field name="currency_id"/>
                            <field name="code"/>
                        </group>
                        <group name="phone_vat_settings" invisible="1">
                            <field name="phone_code"/>
                            <field name="vat_label"/>
                        </group>
                        <group name="advanced_address_formatting" string="Advanced Address Formatting" groups="base.group_no_one" col="4" colspan="4" invisible="1">
                            <field name="address_view_id"/>
                            <div colspan="2" class="text-muted">Choose a subview of partners that includes only address fields, to change the way users can input addresses.</div>
                            <field name="address_format" placeholder="Address format..."/>
                            <div colspan="2" name="div_address_format" class="text-muted">Change the way addresses are displayed in reports</div>
                            <field name="name_position"/>
                        </group>
                    </group>
                    <label for="state_ids"/>
                    <field name="state_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="code"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>
    

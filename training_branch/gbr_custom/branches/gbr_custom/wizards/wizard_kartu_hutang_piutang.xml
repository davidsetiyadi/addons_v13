<?xml version="1.0" encoding="utf-8"?>
<odoo>   
<data>
	<record id="wizard_kartu_hutang_form" model="ir.ui.view">
			<field name="name">gbr.kartu.hutang.piutang.form</field>
			<field name="model">gbr.kartu.hutang.piutang</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Filter List Order">
					<group>
						<group>	
							<label for="tanggal_awal" string="Tanggal"/>
                        	<div for="tanggal_awal" class="o_row" >
								<field name="tanggal_awal" readonly="0" style="padding-right:10px"/>
								<field name="tanggal_akhir" readonly="0"/>
							</div>
							
							<field name="divisi_id" readonly="0" options="{'no_open':True,'no_create':True}"/>					
							<field name="vendor_id" readonly="0" widget="res_partner_many2one" context="{'res_partner_search_mode': 'supplier', 'show_address': 1, 'show_vat': True}" options="{'no_open':True,'no_create':True}" required="1"/>
							<field name="currency_id" readonly="0" string="MU"/>					
						</group>
						<group>	
							<field name="is_pembelian_credit" readonly="0"/>
							<field name="is_rtr_pembelian_credit" readonly="0" />
							<field name="is_debet_credit_note" readonly="0" />
							<field name="is_deposit" readonly="0" />
						</group>
					</group>	

					<!-- <field name="filter_ids" widget="section_and_note_one2many">
						
					</field> -->			

					<footer>
                        <button type="object"
                        class="oe_stat_button"
                        id="partner_ledger_button"
                        icon="fa-pencil-square-o"
                        name="open_partner_ledger"
                        string="Partner Ledger"
                        context="{'default_partner_id': vendor_id}">
                    </button>
                        or
                        <button string="Tutup" class="oe_highlight" special="cancel"/>
                	</footer>
				</form>
			</field>
		</record>
		<record id="wizard_kartu_piutang_form" model="ir.ui.view">
			<field name="name">gbr.kartu.hutang.piutang.form</field>
			<field name="model">gbr.kartu.hutang.piutang</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Filter List Order">
					<group>
						<group>	
							<label for="tanggal_awal" string="Tanggal"/>
                        	<div for="tanggal_awal" class="o_row" >
								<field name="tanggal_awal" readonly="0" style="padding-right:10px"/>
								<field name="tanggal_akhir" readonly="0"/>
							</div>
							
							<field name="divisi_id" readonly="0" options="{'no_open':True,'no_create':True}"/>					
							<field name="pelanggan_id" readonly="0" widget="res_partner_many2one" context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True}" options="{'no_open':True,'no_create':True}" required="1"/>
							<field name="currency_id" readonly="0" string="MU"/>					
						</group>
						<group>	
							
							<field name="is_invoice_statement" readonly="0"/>
							<field name="is_penjualan_credit" readonly="0"/>
							<field name="is_retur_penjualan_credit" readonly="0" />
							<field name="is_debet_credit_note" readonly="0" />
							<field name="is_deposit" readonly="0" />
						</group>
					</group>	

					<!-- <field name="filter_ids" widget="section_and_note_one2many">
						
					</field> -->			

					<footer>
                        <button type="object"
                        class="oe_stat_button"
                        id="partner_ledger_button2"
                        icon="fa-pencil-square-o"
                        name="open_partner_ledger2"
                        string="Partner Ledger"
                        context="{'default_partner_id': pelanggan_id}">
                    </button>
                        or
                        <button string="Tutup" class="oe_highlight" special="cancel"/>
                	</footer>
				</form>
			</field>
		</record>

		<record id="action_wizard_kartu_hutang_view" model="ir.actions.act_window">
			<field name="name">Kartu Hutang</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">gbr.kartu.hutang.piutang</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="wizard_kartu_hutang_form"/>
			<field name="target">new</field>
		</record>

		<record id="action_wizard_kartu_piutang_view" model="ir.actions.act_window">
			<field name="name">Kartu Piutang</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">gbr.kartu.hutang.piutang</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="wizard_kartu_piutang_form"/>
			<field name="target">new</field>
		</record>
	<menuitem name="Kartu Hutang" action="gbr_custom.action_wizard_kartu_hutang_view" id="gbr_custom.menu_gbr_kartu_hutang" parent="gbr_ui_custom.menu_gbr_other" sequence="7"/>
	<menuitem name="Kartu Piutang" action="gbr_custom.action_wizard_kartu_piutang_view" id="gbr_custom.menu_gbr_kartu_piutang" parent="gbr_ui_custom.menu_gbr_other" sequence="7"/>

</data>
</odoo>